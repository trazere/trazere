<project name="tools.impl">
	<!-- Imports -->
	<import file="../../module/env.xml" />

	<!-- Ant -->
	<property name="tools.ant" location="${tools.module}/ant-1.7.0" />
	<path id="tools.ant.classpath">
		<fileset id="tools.ant.jars" dir="${tools.ant}">
			<include name="ant.jar" />
		</fileset>
	</path>

	<!-- Commons logging -->
	<property name="tools.commons-logging" location="${tools.module}/commons-logging-1.1.1" />
	<path id="tools.commons-logging.classpath">
		<fileset id="tools.commons-logging.jars" dir="${tools.commons-logging}">
			<include name="commons-logging.jar" />
		</fileset>
	</path>
</project>
