<project default="usage">
	<import file="build/project.xml" />

	<!-- Usage -->
	<target name="usage">
		<echo>TODO</echo>
	</target>

	<!-- Clean -->
	<target name="clean" description="Clean" depends="root.clean" />

	<!-- Clean the distribution -->
	<target name="distclean" description="Clean the distribution" depends="root.distclean" />

	<!-- Compile -->
	<target name="compile" description="Compile" depends="root.compile" />

	<!-- Build the distribution -->
	<target name="build" description="Build the distribution">
		<antcall target="root.build" inheritall="false">
			<param name="ant.dist" location="${root.dist.binary}" />
			<param name="parser.dist" location="${root.dist.binary}" />
			<param name="utils.dist" location="${root.dist.binary}" />
		</antcall>
	</target>

	<!-- Build the distribution archives -->
	<target name="buildArchives" description="Build the distribution archives">
		<antcall target="root.buildArchives" inheritall="false">
			<param name="ant.dist" location="${root.dist.binary}" />
			<param name="parser.dist" location="${root.dist.binary}" />
			<param name="utils.dist" location="${root.dist.binary}" />
		</antcall>
	</target>

	<!-- Environment -->
	<target name="environment" description="Display the environment">
		<echoproperties />
	</target>

	<!-- Xalan -->
	<target name="xalan" description="Display the Xalan version">
		<java classname="org.apache.xalan.xslt.EnvironmentCheck" failonerror="true" />
	</target>
</project>
