<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
	<info organisation="com.trazere" module="utils" />

	<configurations>
		<conf name="default" extends="master, compile" />
		<conf name="compile" />
		<conf name="runtime" extends="compile" />
		<conf name="master" />
	</configurations>

	<publications defaultconf="master">
		<artifact type="jar" ext="jar" />
		<artifact type="pom" ext="pom" />
		<artifact type="source" ext="jar" />
	</publications>

	<dependencies defaultconf="compile" defaultconfmapping="*->default">
		<dependency org="com.sun.xml.bind" name="jaxb-impl" rev="${tools.version.javax.xml.bind.jaxb}" />
		<dependency org="com.sun.xml.stream" name="sjsxp" rev="${tools.version.com.sun.xml.stream.sjsxp}" />
		<dependency org="org.slf4j" name="slf4j-api" rev="${tools.version.org.slf4j}" />
	</dependencies>
</ivy-module>
