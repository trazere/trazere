<project xmlns:ivy="antlib:org.apache.ivy.ant">
	<import file="env.xml" />
	<import file="${utils.project}" />

	<!-- Declarations -->
	<property name="parser.build" location="${parser}/build" />
	<property name="parser.build.ivy" location="${parser.build}/ivy.xml" />

	<property name="parser.sources" location="${parser}/sources" />

	<property name="parser.target" location="${parser.build}/target" />
	<property name="parser.target.classes" location="${parser.target}/classes" />
	<property name="parser.target.jar" location="${parser.target}/parser.jar" />
	<property name="parser.target.libs" location="${parser.target}/libs" />
	<property name="parser.target.source_jar" location="${parser.target}/parser-sources.jar" />

	<property name="parser.dist" location="${parser}/dist" />
	<property name="parser.dist.libs" value="${parser.dist}/libs" />
	<property name="parser.dist.maven" value="${parser.dist}/maven" />
	<property name="parser.dist.sources" value="${parser.dist}/sources" />

	<path id="parser.classpath">
		<pathelement location="${parser.target.classes}" />
	</path>
	<union id="parser.jars">
		<fileset file="${parser.target.jar}" />
	</union>

	<!-- Clean -->
	<target name="parser.clean" depends="utils.clean">
		<delete dir="${parser.target}" />
	</target>

	<!-- Clean the distribution -->
	<target name="parser.distclean">
		<delete dir="${parser.dist}" />
	</target>

	<!-- Setup the dependencies -->
	<target name="parser.setupDependencies">
		<ivy:resolve file="${parser.build.ivy}" log="download-only" />
		<ivy:retrieve pattern="${parser.target.libs}/[conf]/[organisation].[artifact](-[revision]).[ext]" />

		<path id="parser.dependencies.compile.classpath">
			<fileset id="parser.dependencies.compile.libs" dir="${parser.target.libs}/compile" />
		</path>
	</target>

	<!-- Compile the sources -->
	<target name="parser.compileSources" depends="parser.setupDependencies, utils.compileSources">
		<mkdir dir="${parser.target.classes}" />
		<javac destdir="${parser.target.classes}" source="${trazere.java.version}" encoding="${trazere.java.encoding}" target="${trazere.java.version}" debug="${trazere.java.debug}" includeantruntime="false" failonerror="true">
			<src location="${parser.sources}" />
			<classpath>
				<path refid="parser.dependencies.compile.classpath" />
				<path refid="utils.classpath" />
			</classpath>
		</javac>
	</target>

	<!-- Compile -->
	<target name="parser.compile" depends="parser.compileSources" />

	<!-- Build the JAR -->
	<target name="parser.buildJar" depends="parser.compileSources">
		<mkdir dir="${parser.target}" />
		<jar destfile="${parser.target.jar}">
			<fileset dir="${parser.target.classes}" includes="**/*.class" />
			<fileset dir="${parser.sources}" excludes="**/*.java" />
		</jar>
	</target>

	<!-- Build the source JAR -->
	<target name="parser.buildSourceJar">
		<mkdir dir="${parser.target}" />
		<jar destfile="${parser.target.source_jar}">
			<fileset dir="${parser.sources}" />
		</jar>
	</target>

	<!-- Build the distribution -->
	<target name="parser.build" depends="parser.buildJar, parser.buildSourceJar">
		<mkdir dir="${parser.dist}" />

		<!-- Jars -->
		<mkdir dir="${parser.dist.libs}" />
		<copy todir="${parser.dist.libs}">
			<resources refid="parser.jars" />
		</copy>

		<!-- Sources -->
		<mkdir dir="${parser.dist.sources}" />
		<copy todir="${parser.dist.sources}">
			<fileset file="${parser.target.source_jar}" />
		</copy>

		<!-- Maven -->
		<property name="ivy.pom.version" value="${trazere.version}" />
		<ivy:makepom ivyfile="${parser.build.ivy}" pomfile="${parser.dist.maven}/parser.pom" conf="compile,runtime">
			<dependency artifact="utils" version="${trazere.version}" scope="compile" />
		</ivy:makepom>
	</target>
</project>
