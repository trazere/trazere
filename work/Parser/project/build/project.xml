<project>
	<import file="env.xml" />
	<import file="${utils.project}" />

	<!-- Declarations -->
	<property name="parser.sources" location="${parser}/sources" />

	<property name="parser.target" location="${parser}/build/target" />
	<property name="parser.target.classes" location="${parser.target}/classes" />
	<property name="parser.target.jar" location="${parser.target}/trazere-parser.jar" />

	<property name="parser.dist" location="${parser}/dist" />
	<property name="parser.dist.lib" value="${parser.dist}/lib" />

	<union id="parser.libs">
		<union id="parser.deps">
			<resources refid="tools.commons-logging.libs" />
			<resources refid="utils.libs" />
		</union>
		<union id="parser.jars">
			<fileset file="${parser.target.jar}" />
		</union>
	</union>
	<path id="parser.classpath">
		<pathelement location="${parser.target.classes}" />
	</path>

	<!-- Clean -->
	<target name="parser.clean" depends="utils.clean">
		<delete dir="${parser.target}" />
	</target>

	<!-- Clean the distribution -->
	<target name="parser.distclean">
		<delete dir="${parser.dist}" />
	</target>

	<!-- Compile the sources -->
	<target name="parser.compileSources" depends="utils.compileSources">
		<mkdir dir="${parser.target.classes}" />
		<javac destdir="${parser.target.classes}" source="${trazere.java.version}" encoding="${trazere.java.encoding}" target="${trazere.java.version}" debug="${trazere.java.debug}" includeantruntime="false" failonerror="true">
			<src location="${parser.sources}" />
			<classpath>
				<path refid="tools.commons-logging.classpath" />
				<path refid="utils.classpath" />
			</classpath>
		</javac>
	</target>

	<!-- Compile -->
	<target name="parser.compile" depends="parser.compileSources" />

	<!-- Build the JAR -->
	<target name="parser.buildJar" depends="parser.compileSources">
		<mkdir dir="${parser.target}" />
		<jar destfile="${parser.target.jar}">
			<fileset dir="${parser.target.classes}" includes="**/*.class" />
			<fileset dir="${parser.sources}" excludes="**/*.java" />
		</jar>
	</target>

	<!-- Build the distribution -->
	<target name="parser.build" depends="parser.buildJar">
		<mkdir dir="${parser.dist}" />

		<!-- Jars -->
		<mkdir dir="${parser.dist.lib}" />
		<copy todir="${parser.dist.lib}">
			<resources refid="parser.jars" />
		</copy>
	</target>
</project>
