<project>
	<import file="env.xml" />
	<import file="${parser.project}" />
	<import file="${utils.project}" />

	<!-- Declarations -->
	<property name="trazere.resources" location="${trazere}/resources" />

	<property name="trazere.dist" location="${trazere}/dist" />
	<property name="trazere.dist.binary" location="${trazere.dist}/trazere-${trazere.version}" />
	<property name="trazere.dist.tgz" location="${trazere.dist}/trazere-${trazere.version}.tar.gz" />
	<property name="trazere.dist.zip" location="${trazere.dist}/trazere-${trazere.version}.zip" />

	<!-- Clean -->
	<target name="trazere.clean" depends="parser.clean, utils.clean" />

	<!-- Clean the distribution -->
	<target name="trazere.distclean">
		<delete dir="${trazere.dist}" />
	</target>

	<!-- Compile -->
	<target name="trazere.compile" depends="parser.compile, utils.compile" />

	<!-- Build the distribution -->
	<target name="trazere.build" depends="parser.build, utils.build">
		<mkdir dir="${trazere.dist.binary}" />

		<!-- Distribution -->
		<copy todir="${trazere.dist.binary}">
			<fileset dir="${trazere.resources}">
				<include name="README.txt" />
				<include name="LICENSE.txt" />
			</fileset>
		</copy>
	</target>

	<!-- Build the archives -->
	<target name="trazere.buildArchives" depends="trazere.build">
		<tar destfile="${trazere.dist.tgz}" basedir="${trazere.dist}" compression="gzip">
			<include name="trazere-${trazere.version}/**/*" />
		</tar>
		<zip destfile="${trazere.dist.zip}" basedir="${trazere.dist}" encoding="iso-8859-1">
			<include name="trazere-${trazere.version}/**/*" />
		</zip>
	</target>
</project>
