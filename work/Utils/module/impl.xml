<project name="utils.impl">
	<!-- Imports -->
	<import file="../../module/env.xml" />
	<import file="${tools.ant.impl}" />

	<!-- Declarations -->
	<property name="utils.sources" location="${utils.module}/sources" />

	<property name="utils.build" location="${utils.module}/build" />
	<property name="utils.build.classes" location="${utils.build}/classes" />
	<property name="utils.build.jar" location="${utils.build}/utils.jar" />

	<property name="utils.dist" location="${utils.module}/dist" />
	<property name="utils.dist.lib" value="${utils.dist}/lib" />

	<!-- Clean -->
	<target name="utils.clean">
		<delete dir="${utils.build}" />
	</target>

	<!-- Clean the distribution -->
	<target name="utils.distclean">
		<delete dir="${utils.dist}" />
	</target>

	<!-- Compile the sources -->
	<target name="utils.compileSources">
		<mkdir dir="${utils.build.classes}" />
		<javac destdir="${utils.build.classes}" source="${trazere.java.version}" debug="${trazere.java.debug}" target="${trazere.java.version}" failonerror="true" encoding="${trazere.java.encoding}">
			<src location="${utils.sources}" />
			<classpath>
				<path refid="tools.ant.classpath" />
				<path refid="tools.commons-logging.classpath" />
				<path refid="tools.sjsxp.classpath" />
			</classpath>
		</javac>
	</target>

	<!-- Compile -->
	<target name="utils.compile" depends="utils.compileSources" />

	<!-- Build the JAR -->
	<target name="utils.buildJar" depends="utils.compileSources">
		<mkdir dir="${utils.build}" />
		<jar destfile="${utils.build.jar}">
			<fileset dir="${utils.sources}" includes="**/*.java" />
			<fileset dir="${utils.build.classes}" includes="**/*.class" />
		</jar>
	</target>

	<!-- Build the distribution -->
	<target name="utils.build" depends="utils.buildJar">
		<mkdir dir="${utils.dist}" />

		<!-- Jars -->
		<mkdir dir="${utils.dist.lib}" />
		<copy tofile="${utils.dist.lib}/trazere-utils.jar" file="${utils.build.jar}" />
	</target>

	<!-- Build the bootstrap JAR -->
	<!--
	<target name="utils.buildBootstrapJar" depends="utils.compileSources">
		<echo>Building the bootstrap JAR</echo>

		<mkdir dir="${utils.dist}" />
		<jar destfile="${utils.dist.bootstrap_jar}">
			<fileset dir="${utils.sources}" includes="com/trazere/util/TargetTask.java" />
			<fileset dir="${utils.build.classes}" includes="com/trazere/util/TargetTask.class" />
		</jar>
	</target>
	-->
</project>
