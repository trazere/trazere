<project xmlns:ivy="antlib:org.apache.ivy.ant">
	<import file="env.xml" />

	<!-- Declarations -->
	<property name="ant.build" location="${ant}/build" />
	<property name="ant.build.ivy" location="${ant.build}/ivy.xml" />

	<property name="ant.sources" location="${ant}/sources" />

	<property name="ant.target" location="${ant.build}/target" />
	<property name="ant.target.artifacts" location="${ant.target}/artifacts" />
	<property name="ant.target.artifacts.jar" location="${ant.target.artifacts}/ant-jar.jar" />
	<property name="ant.target.artifacts.pom" location="${ant.target.artifacts}/ant-pom.pom" />
	<property name="ant.target.artifacts.source" location="${ant.target.artifacts}/ant-source.jar" />
	<property name="ant.target.classes" location="${ant.target}/classes" />
	<property name="ant.target.dependencies" location="${ant.target}/dependencies" />
	<property name="ant.target.libs" location="${ant.target}/libs" />

	<path id="ant.classpath">
		<pathelement location="${ant.target.classes}" />
	</path>

	<!-- Clean -->
	<target name="ant.clean">
		<delete dir="${ant.target}" />
	</target>

	<!-- Setup the dependencies -->
	<target name="ant.setupDependencies">
		<ivy:resolve file="${ant.build.ivy}" log="download-only" />
		<ivy:retrieve pattern="${ant.target.libs}/${ivy.retrieve.pattern}" type="${ivy.retrieve.type}" />

		<mkdir dir="${ant.target.libs}/compile" />
		<path id="ant.dependencies.compile.classpath">
			<fileset id="ant.dependencies.compile.jars" dir="${ant.target.libs}/compile" />
		</path>
	</target>

	<!-- Report the dependencies -->
	<target name="ant.reportDependencies">
		<ivy:resolve file="${ant.build.ivy}" log="download-only" />
		<ivy:report todir="${ant.target.dependencies}" />
	</target>

	<!-- Compile the sources -->
	<target name="ant.compileSources" depends="ant.setupDependencies">
		<mkdir dir="${ant.target.classes}" />
		<javac destdir="${ant.target.classes}" source="${javac.source}" encoding="${javac.encoding}" target="${javac.target}" debug="${javac.debug}" includeantruntime="false" failonerror="true">
			<src location="${ant.sources}" />
			<classpath>
				<path refid="ant.dependencies.compile.classpath" />
			</classpath>
		</javac>
	</target>

	<!-- Compile -->
	<target name="ant.compile" depends="ant.compileSources" />

	<!-- Build the JAR artifact -->
	<target name="ant.buildJar" depends="ant.compileSources">
		<mkdir dir="${ant.target.artifacts}" />
		<jar destfile="${ant.target.artifacts.jar}">
			<fileset dir="${ant.target.classes}" includes="**/*.class" />
			<fileset dir="${ant.sources}" excludes="**/*.java" />
		</jar>
	</target>

	<!-- Build the POM artifact -->
	<target name="ant.buildPom">
		<mkdir dir="${ant.target.artifacts}" />
		<property name="ivy.pom.version" value="${scroll.version}" />
		<ivy:makepom ivyfile="${ant.build.ivy}" pomfile="${ant.target.artifacts.pom}" conf="compile,runtime">
			<mapping conf="compile" scope="compile" />
			<mapping conf="runtime" scope="runtime" />
		</ivy:makepom>
	</target>

	<!-- Build the source artifact -->
	<target name="ant.buildSource">
		<mkdir dir="${ant.target.artifacts}" />
		<jar destfile="${ant.target.artifacts.source}">
			<fileset dir="${ant.sources}" />
		</jar>
	</target>

	<!-- Publish the artifacts -->
	<target name="ant.publish" depends="ant.buildJar, ant.buildPom, ant.buildSource">
		<ivy:resolve file="${ant.build.ivy}" log="download-only" />
		<ivy:publish pubrevision="${scroll.version}" resolver="${ivy.publish.resolver}" overwrite="true" forcedeliver="true">
			<artifacts pattern="${ant.target.artifacts}/ant-[type].[ext]" />
		</ivy:publish>
	</target>
</project>
