<project name="trazere.env">
	<!-- Imports -->
	<import file="modules.xml" />

	<!-- Build -->
	<property name="trazere.version" value="0.1" />

	<!-- Environment -->
	<property environment="env" />

	<macrodef name="checkEnvVariable">
		<attribute name="property" />
		<sequential>
			<fail message="Missing environment variable (@{property})">
				<condition>
					<not>
						<isset property="env.@{property}" />
					</not>
				</condition>
			</fail>
		</sequential>
	</macrodef>

	<!-- Compilation -->
	<property name="trazere.java.debug" value="true" />
	<property name="trazere.java.encoding" value="utf-8" />
	<property name="trazere.java.version" value="1.5" />

	<!-- Configuration -->
	<macrodef name="checkConfigurationProperty">
		<attribute name="property" />
		<sequential>
			<fail message="Missing configuration property (@{property})">
				<condition>
					<not>
						<isset property="trazere.@{property}" />
					</not>
				</condition>
			</fail>
		</sequential>
	</macrodef>
</project>
