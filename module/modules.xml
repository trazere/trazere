<project name="trazere.modules">
	<!-- Trazere -->
	<dirname property="trazere.module" file="${ant.file.trazere.modules}" />
	<property name="trazere" location="${trazere.module}/.." />
	<property name="trazere.ant.impl" location="${trazere.module}/impl.xml" />

	<!-- Parser -->
	<property name="parser" location="${trazere}/Parser" />
	<property name="parser.module" location="${parser}/module" />
	<property name="parser.ant.impl" location="${parser.module}/impl.xml" />

	<!-- Tests -->
	<property name="tests" location="${trazere}/Tests" />
	<property name="tests.module" location="${tests}/module" />
	<property name="tests.ant.impl" location="${tests.module}/impl.xml" />

	<!-- Tools -->
	<property name="tools" location="${trazere}/Tools" />
	<property name="tools.module" location="${tools}/module" />
	<property name="tools.ant.impl" location="${tools.module}/impl.xml" />

	<!-- Utils -->
	<property name="utils" location="${trazere}/Utils" />
	<property name="utils.module" location="${utils}/module" />
	<property name="utils.ant.impl" location="${utils.module}/impl.xml" />
</project>
