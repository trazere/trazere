<project name="trazere.impl">
	<!-- Imports -->
	<import file="modules.xml" />
	<import file="${tests.ant.impl}" />

	<!-- Declarations -->
	<property name="trazere.resources" location="${trazere.module}/resources" />

	<property name="trazere.build" location="${trazere.module}/build" />

	<property name="trazere.dist" location="${trazere.module}/dist" />
	<property name="trazere.dist.binary" location="${trazere.dist}/trazere-${trazere.version}" />
	<property name="trazere.dist.zip" location="${trazere.dist}/trazere-${trazere.version}.zip" />

	<!-- Clean -->
	<target name="trazere.clean" depends="tests.clean, utils.clean">
		<echo>Cleaning</echo>

		<delete dir="${trazere.build}" />
		<delete dir="${trazere.dist}" />
	</target>

	<!-- Build the distribution -->
	<target name="trazere.buildBinary" depends="utils.buildBinary">
		<echo>Building the distribution</echo>

		<!-- Utils -->
		<copy todir="${trazere.dist.binary}">
			<fileset dir="${utils.dist.binary}" />
		</copy>

		<!-- Distribution -->
		<mkdir dir="${trazere.dist.binary}" />
		<copy todir="${trazere.dist.binary}">
			<fileset dir="${trazere.resources}">
				<include name="README.txt" />
				<include name="LICENSE.txt" />
			</fileset>
		</copy>
	</target>

	<!-- Build the distribution (ZIP archive) -->
	<target name="trazere.buildBinaryZip" depends="trazere.buildBinary">
		<echo>Building the distribution (ZIP archive)</echo>

		<zip destfile="${trazere.dist.zip}" basedir="${trazere.dist.binary}" encoding="iso-8859-1" />
	</target>
</project>
